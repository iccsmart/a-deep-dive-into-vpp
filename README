=== VPP Configuration ===
# cat /etc/vpp/startup.conf
unix {
  nodaemon
  log /tmp/vpp.log
  cli-listen localhost:5002
  cli-no-banner
  full-coredump
}

api-trace {
  on
}

cpu {
  skip-cores 11
  main-core 11
  corelist-workers 12-13
}

dpdk {
  socket-mem 256,256
  nchannels 4
  num-mbufs 16384
  dev 0000:82:00.0
  dev 0000:82:00.1
  uio-driver igb_uio
}


